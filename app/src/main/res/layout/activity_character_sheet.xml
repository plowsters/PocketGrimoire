            android:textColor="#BEB688"
            android:textSize="15sp"
            android:fontFamily="@font/inknut_antiqua_regular"
            app:layout_constraintTop_toTopOf="@id/levelImageView"
            app:layout_constraintBottom_toBottomOf="@id/levelImageView"
            app:layout_constraintLeft_toLeftOf="@id/levelImageView"/>

        <TextView
            android:id="@+id/currLevelTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00"
            android:textSize="20sp"
            android:fontFamily="@font/inria_serif_light"
            android:textColor="#BEB688"
            app:layout_constraintTop_toTopOf="@id/levelImageView"
            app:layout_constraintBottom_toBottomOf="@id/levelImageView"
            app:layout_constraintLeft_toRightOf="@id/levelTextView"
            app:layout_constraintRight_toRightOf="@id/levelImageView"/>

        <ImageView
            android:id="@+id/xpBarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
