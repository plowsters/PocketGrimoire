    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/characterDetailsTopImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:alpha="0.7"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/character_sheet_top_section" />

        <ImageView
            android:id="@+id/characterNameAndDetailsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="100dp"
            app:layout_constraintBottom_toBottomOf="@id/characterDetailsTopImageView"
            app:layout_constraintLeft_toLeftOf="@id/characterDetailsTopImageView"
            app:layout_constraintRight_toRightOf="@id/characterDetailsTopImageView"
            app:layout_constraintTop_toTopOf="@id/characterDetailsTopImageView"
            app:srcCompat="@drawable/character_name_section" />

        <TextView
            android:id="@+id/characterNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inknut_antiqua_regular"
            android:text="CHARACTER NAME"
            android:textColor="#BEB688"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="@id/characterNameAndDetailsImageView"
            app:layout_constraintTop_toTopOf="@id/characterNameAndDetailsImageView" />

        <TextView
            android:id="@+id/classTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/inria_serif_light"
            android:text="class | "
            android:textColor="#BEB688"
            android:textSize="15sp"
            app:layout_constraintLeft_toLeftOf="@id/characterNameAndDetailsImageView"
            app:layout_constraintTop_toBottomOf="@+id/characterNameTextView" />

        <TextView
            android:id="@+id/raceTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inria_serif_light"
            android:text="race | "
            android:textColor="#BEB688"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/classTextView"
            app:layout_constraintTop_toBottomOf="@+id/characterNameTextView" />

        <TextView
            android:id="@+id/genderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/inria_serif_light"
            android:text="gender"
            android:textColor="#BEB688"
            android:textSize="15sp"
            app:layout_constraintLeft_toRightOf="@id/raceTextView"
            app:layout_constraintTop_toBottomOf="@+id/characterNameTextView" />

        <ImageView
            android:id="@+id/hpBarImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="34dp"
            app:layout_constraintBottom_toTopOf="@id/xpBarImageView"
            app:layout_constraintRight_toRightOf="@id/characterDetailsTopImageView"
            app:layout_constraintTop_toBottomOf="@id/characterNameAndDetailsImageView"
