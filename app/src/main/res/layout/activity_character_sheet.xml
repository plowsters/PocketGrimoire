            android:text="HP"
            android:textColor="#BEB688"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/hpBarImageView"
            app:layout_constraintLeft_toLeftOf="@+id/hpBarImageView"
            app:layout_constraintTop_toTopOf="@+id/hpBarImageView" />

        <TextView
