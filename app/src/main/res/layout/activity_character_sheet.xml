            app:layout_constraintLeft_toLeftOf="@id/strBoxImageView"/>

        <TextView
            android:id="@+id/strSMTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+0"
            android:textSize="15sp"
            android:layout_marginBottom="5dp"
            android:textColor="#BEB688"
            android:fontFamily="@font/inknut_antiqua_medium"
            app:layout_constraintBottom_toBottomOf="@id/strBoxImageView"
            app:layout_constraintTop_toBottomOf="@id/strValueTextView"
            app:layout_constraintRight_toRightOf="@id/strBoxImageView"
            app:layout_constraintLeft_toLeftOf="@id/strBoxImageView"/>

        <TextView
            android:id="@+id/dexTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inknut_antiqua_regular"
            android:textColor="#BEB688"
            android:textSize="12sp"
            android:text="DEX"
            android:layout_marginTop="5sp"
            app:layout_constraintTop_toTopOf="@id/dexBoxImageView"
