            android:textSize="20sp"
            app:layout_constraintRight_toLeftOf="@id/maxHPTextView"
            app:layout_constraintTop_toTopOf="@id/hpBarImageView"
            app:layout_constraintBottom_toBottomOf="@id/hpBarImageView"/>

        <TextView
