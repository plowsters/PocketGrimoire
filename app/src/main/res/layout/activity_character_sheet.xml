            android:textColor="#BEB688"
            android:fontFamily="@font/inria_serif_light"
            android:textSize="40sp"
            android:text="00"
            android:layout_marginBottom="30dp"
            app:layout_constraintTop_toBottomOf="@id/strTextView"
            app:layout_constraintBottom_toBottomOf="@id/strSMTextView"
