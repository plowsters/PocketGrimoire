<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="80dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="80dp"
    android:orientation="vertical"
    android:scrollbars="vertical">

    <ImageButton
        android:id="@+id/itemsListImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/item_display" />

    <TextView
        android:id="@+id/itemsListItemTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/inknut_antiqua_regular"
        android:padding="2dp"
        android:text="@string/item_name"
        android:textColor="#BEB688"
        android:textSize="12sp" />

    <ImageButton
        android:id="@+id/editItemImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/edit_button" />

    <ImageButton
        android:id="@+id/deleteItemImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="230dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/delete_button" />


</RelativeLayout>